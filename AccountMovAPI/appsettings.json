{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "File": {
    "Path": "logs/logfile.txt",
    "Append": true,
    "MaxFileSize": 1048576,
    "MaxRollingFiles": 3,
    "RollingInterval": "Day"
  },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AccountsDB": "Data Source=frodorix-sqlserver, 1433;Initial Catalog=AccountMovs;Persist Security Info=True;User ID=sa;Password=yourStrongPassword#;TrustServerCertificate=true"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:80"
      }
    }
  }
}
